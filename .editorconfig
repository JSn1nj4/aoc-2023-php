root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = tab
indent_size = 4
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false

[*.php]
ij_php_space_before_closure_left_parenthesis = true
ij_php_space_before_short_closure_left_parenthesis = true

[*.{yml,yaml}]
indent_style = space
indent_size = 2
